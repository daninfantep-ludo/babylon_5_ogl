<div class="clases-section">
  <div class="clases-header">Nivel [ {{ecl}} ]</div>
  <div class="clases-list">
    {{#each clases}}
      <div class="clase-item item" data-item-id="{{_id}}">
        <span class="clase-nombre">{{name}}</span>
        <div class="item" data-item-id="{{_id}}" data-field="system.nivel">
          <input class="clase-nivel change" type="number" min="1" max="20" value="{{system.nivel}}"/>
        </div>
        <button class="remove-class" data-action="removeClass" data-item-id="{{_id}}">âœ•</button>
      </div>
    {{/each}}
    {{#unless clases}}
      <div class="sin-clases">Sin clases</div>
    {{/unless}}
  </div>
</div>
